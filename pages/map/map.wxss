/* pages/map/map.wxss */
page{
  height: 100%;
}
#map{
  display: flex;
  width: 100%;
  height: 55%;
}
.section{
  height: 30px;
  width: 100%;
}
.section input{
  width:90%;
  margin:5px auto;
  border:1px solid #c3c3c3;
  height:30px;
  border-radius: 3px;
  padding: 0 5px;
}
.text_box{
  margin: 10px 25px;
  border-bottom:1px solid #c3c3c3;
  padding-bottom:10px;
  z-index: 2;
}

.controlBox{
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 50px;
  z-index: 2;
}

.control{
  width: 30px;
  height: 30px;
  border-radius: 100%;
  padding: 5px;
  border: solid 3px white;
  background: rgb(255, 255, 255)
}

.controlBox.fullscreen{
  top: 0px;
  right: 0px;
  position: absolute;
  align-self: right;
  margin: 3px;
}

.left-box{
  bottom: 0px;
  margin: 3px;
  position: absolute;
}

.right-box{
  right: 0px;
  bottom: 0px;
  margin: 3px;
  position: absolute;
}

.sv{
  width: 100%;
  height: 500px;
}
